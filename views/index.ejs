                                <h3><%= products[j].title %></h3>
                                <p><%= products[j].description %></p>
                                <div class="clearfix">
                                    <div class="price pull-left">â‚¹<%= products[j].price %></div>
                                    <a href="/add-to-cart/<%= products[j]._id %>" class="btn btn-default btn-success pull-right" role="button">Add to Cart</a>
                                </div>
                            </div>
                        </div>
                    </div> <!--col ending-->            
            <% } %>

        </div> <!-- row ending-->
    <% } %>
        
